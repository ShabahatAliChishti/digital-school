@model digital_School.ViewModel.tbl_TestFileValidation
@{
    ViewBag.Title = "addtestfile";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="margin-top:50px;">
    <div class="card card-info">
        <div class="card-header ">
            <h3 class="card-title ">Test</h3>
        </div>

        @using (Html.BeginForm("addtestfile", "ManualTest", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            </div>

            <form class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Course</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.DropDownListFor(model => model.CourseId, (SelectList)ViewBag.course, "Select Course", new { required = "required", @class = "form-control", @id = "ddCourseId" })

                            @Html.ValidationMessageFor(x => Model.CourseId, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    @*<div class="form-group">
                        @Html.Label("CLass", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-12">*@
                    @*@Html.DropDownList("Select Type", (IEnumerable<SelectListItem>)ViewData["BlogType"], "Select Type", new { @class = "form-control" })*@
                    @*@Html.DropDownListFor(m => m.ClassId, (IEnumerable<SelectListItem>)ViewBag.classlist, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => Model.ClassId, "", new { @class = "text-danger" })
                            </div>
                        </div>*@

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Duration</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Duration") } })
                            @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Select File</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.TextBoxFor(model => model.UserdocFIle, new
                       {@*@accept = "image/png,image/jpg,image/jpeg",*@type = "file",
@class = "form-control input-sm"
})
                            @Html.ValidationMessageFor(model => model.UserdocFIle, "", new { @class = "text-danger" })

                        </div>
                    </div>







                    @*<div class="form-group">
                            @Html.LabelFor(m => m.Date, new { @class = "col-md-2 control-label" }),
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-ddThh:mm:ss}", new { @class = "form-control", type = "datetime-local" })
                                @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
                            </div>
                        </div>*@



                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-6 col-sm-6 col-6">
                                <button type="submit" class="btn btn-info float-right">ADD</button>
                            </div>
                            <div class="col-md-6 col-sm-6 col-6">
                                <button type="submit" class="btn btn-default float-left ">Cancel</button>
                            </div>
                        </div>

                    </div>
                </div>
                <!-- /.card-footer -->
            </form>
        }




    </div>

</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}