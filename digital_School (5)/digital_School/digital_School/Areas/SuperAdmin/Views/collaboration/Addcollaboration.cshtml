
@model  digital_School.ViewModel.tbl_collaborationValidation

@{
    ViewBag.Title = "Addcollaboration";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}


<script src="~/FrontEnd/ckeditor/ckeditor.js"></script>


<div class="content-wrapper" style="margin-top:50px;">
    <div class="card card-info">
        <div class="card-header ">
            <h3 class="card-title ">Add  Collaboration Form</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        @using (Html.BeginForm("Addcollaboration", "collaboration", FormMethod.Post, new { @id = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <form class="form-horizontal">
                <div class="card-body">



                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputEmail3" class="col-md-3 col-lg-2 col-form-label">Collaburation Name</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.CallobrationName, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Collaboration Name") } })
                            @Html.ValidationMessageFor(model => model.CallobrationName, "", new { @class = "text-danger" })
                            @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Title</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.CallobrationTitle, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Collaboration Title") } })
                            @Html.ValidationMessageFor(model => model.CallobrationTitle, "", new { @class = "text-danger" })

                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Image</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.TextBoxFor(model => model.CollImageFIle, new { @class = "form-control input-sm", @accept = "image/png,image/jpg,image/jpeg", type = "file" })
                            @Html.ValidationMessageFor(model => model.CollImageFIle, "", new { @class = "text-danger" })

                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label"> Description</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.TextAreaFor(model => model.Description, 5, 40, htmlAttributes: new { @class = "form-control input-sm", style = "width: 100%; max-width: 100%;" ,id="FullDescription" , placeholder = @Html.DisplayName("Enter Description") })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                            <script>

                                CKEDITOR.replace("FullDescription");
                            </script>


                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-6">
                            <button type="submit" class="btn btn-info float-right">ADD</button>
                        </div>
                        <div class="col-md-6 col-sm-6 col-6">
                            <button type="submit" class="btn btn-default float-left ">Cancel</button>
                        </div>
                    </div>

                </div>
                <!-- /.card-footer -->
            </form>
        }
    </div>


</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}

