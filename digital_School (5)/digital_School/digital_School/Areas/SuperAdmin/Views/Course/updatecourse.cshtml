@model  digital_School.Models.Course

@{
    ViewBag.Title = "updatecourse";
    Layout = "~/Areas/SuperAdmin/Views/Shared/_Layout.cshtml";
}



<script src="~/FrontEnd/ckeditor/ckeditor.js"></script>


<div class="content-wrapper" style="margin-top:50px;">
    <div class="card card-info">
        <div class="card-header ">
            <h3 class="card-title ">Update Course Form</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        @using (Html.BeginForm("updatecourse", "Course", FormMethod.Post, new { @id = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <form class="form-horizontal">
                <div class="card-body">


                    <div class="form-group row">
                        <div class="col-md-6 col-md-offset-6 col-sm-4 col-sm-offset-5 col-5 col-xs-offset-4 "></div>

                        <div class="">
                            <img src="@Url.Content(Session["imgPath"].ToString())" height="135" width="150">
                        </div>

                    </div>


                    <div class="form-group row">
                        <div class="col-md-6 col-md-offset-6 col-sm-4 col-sm-offset-5 col-5 col-xs-offset-4"></div>
                        <input type="file" id="UserImageFile" style="display:none" accept="image/png,image/jpg,image/jpeg" name="UserImageFile" />
                        <div class="">
                            <button class="btn btn-success" id="OpenImgUpload" type="button">
                                <i class="fa fa-fw fa-camera"></i>
                                <span>Change Photo</span>
                            </button>
                        </div>
                    </div>



                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Course Name</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.courseName, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Course Title") } })
                            @Html.ValidationMessageFor(model => model.courseName, "", new { @class = "text-danger" })

                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputEmail3" class="col-md-3 col-lg-2 col-form-label">Code</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Code") } })
                            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                            @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputEmail3" class="col-md-3 col-lg-2 col-form-label">Course Type</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.courseType, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Course Type") } })
                            @Html.ValidationMessageFor(model => model.courseType, "", new { @class = "text-danger" })
                            @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Vedio</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.VideoLink, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Vedio URL") } })
                            @Html.ValidationMessageFor(model => model.VideoLink, "", new { @class = "text-danger" })
                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Description</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.TextAreaFor(model => model.courseDescription, 5, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;", placeholder = @Html.DisplayName("Enter Course Description") })
                            @Html.ValidationMessageFor(model => model.courseDescription, "", new { @class = "text-danger" })

                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Long Description</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.TextAreaFor(model => model.longDes, 8, 40, htmlAttributes: new { required = "required", style = "width: 100%; max-width: 100%;", @id = "FullDescription", placeholder = @Html.DisplayName("Enter Long Description") })
                            @Html.ValidationMessageFor(model => model.longDes, "", new { @class = "text-danger" })
                            <script>

                                CKEDITOR.replace("FullDescription");
                            </script>


                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-6">
                            <button type="submit" class="btn btn-info float-right">Update</button>
                        </div>
                        <div class="col-md-6 col-sm-6 col-6">
                            <button type="submit" class="btn btn-default float-left ">Cancel</button>
                        </div>
                    </div>

                </div>
                <!-- /.card-footer -->
            </form>
        }
    </div>


</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}
<script>
    $('#OpenImgUpload').click(function () { $('#UserImageFile').trigger('click'); });

</script>