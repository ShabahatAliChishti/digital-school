@model digital_School.Models.Article
@{
    ViewBag.Title = "ApproveArticle";
    Layout = "~/Areas/Superadmin/Views/Shared/_Layout.cshtml";
}

    <script src="~/Themes/ckeditor/ckeditor.js"></script>


<div class="content-wrapper" style="margin-top:50px;">
    <div class="card card-info">
        <div class="card-header ">
            <h3 class="card-title ">Article Form</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <form class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-6 col-md-offset-6 col-sm-4 col-sm-offset-5 col-5 col-xs-offset-4 "></div>

                        <div class="">
                            <img src="@Url.Content(Model.imgPath)" height="135" width="150" />

                        </div>

                    </div>



                    <div class="form-group">

                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Title</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(Model => Model.Title, new { htmlAttributes = new { @class = "form-control input-sm", @readonly = "readonly" } })


                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputEmail3" class="col-md-3 col-lg-2 col-form-label">Short Description</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(Model => Model.shortDes, new { htmlAttributes = new { @class = "form-control input-sm", @readonly = "readonly" } })

                            @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email">*@
                        </div>

                    </div>


                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Long Description</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.TextAreaFor(model => model.longDes, 8, 40, htmlAttributes: new { @readonly = "readonly", style = "width: 100%; max-width: 100%;", @id = "FullDescription", placeholder = @Html.DisplayName("Enter Long Description") })
                            <script>

                                CKEDITOR.replace("FullDescription");
                            </script>



                            @*<input type="password" class="form-control" id="inputPassword3" placeholder="Password">*@
                        </div>
                    </div>


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="row">

                    
                            @if (Model.statusId == 1)
                            {
                                <div class="col-md-6 col-sm-6 col-6">
                                    <input name="submit" type="submit" id="submit" value="Approve" class="btn btn-sm btn-success float-right" />
                                </div>
                                <div class="col-md-6 col-sm-6 col-6">
                                    <input name="submit" type="submit" id="submit" value="Reject" class="btn btn-sm btn-primary" />
                                </div>
                             }
                                    else if (Model.statusId == 3)

                                    {
                                    <input name="submit" type="submit" id="process" value="Approve" class="btn btn-sm btn-success" />

                                    }
                                    else

                                    {
                                    <input name="submit" type="submit" id="process" value="Reject" class="btn btn-sm btn-success" />

                                    }

                      </div>

                    </div>
                <!-- /.card-footer -->
            </form>
        }
    </div>


</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>

<script src="~/Scripts/jquery.validate.min.js"></script>



@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}
