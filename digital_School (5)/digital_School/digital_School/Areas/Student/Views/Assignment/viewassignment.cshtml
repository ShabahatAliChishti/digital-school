@model IEnumerable<digital_School.Models.SchoolAssignment>
<!DOCTYPE html>
<html lang="en">

<head>
    @{
        ViewBag.Title = "viewassignments";
        Layout = "~/Areas/Student/Views/Shared/_Layout.cshtml";
    }

</head>
<body id="page-top">




    <!-- Page Wrapper -->
    <div id="wrapper">


        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container" style="background-color:white ; width:80% ;margin-top:50px;margin-right:80px;">

            <!-- Page Heading -->
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Assignment</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="MyTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Assignment Name</th>
                                    <th>Assignment File</th>
                                    <th>Duration</th>
                                    <th>Action Submit Form</th>
                                </tr>
                            </thead>

                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.CreatedDate)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelitem => item.AssignmentName)
                                        </td>
                                        <td>
                                            <a href="~/file_upload/@item.AssignmentUrl" />
                                            @Html.DisplayFor(modelitem => item.AssignmentUrl)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelitem => item.Duration)
                                        </td>
                                        <td>
                                            <button class="button button3" style="background-color: #5DC560; border-color:#5DC560; border-radius:5%;">@Html.ActionLink("Add Submission", "assignmentsubmitted", new { id = item.AssignmentId }, new { Style = "color:White; text-decoration:none;" })</button>
                                        </td>

                                    </tr>

                                }

                            </tbody>
                        </table>








                    </div>
                </div>

            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
    <!-- Footer -->
    <!-- End of Footer -->
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>



</body>


</html>*
