@model  digital_School.ViewModel.tbl_TeacherValidation

@{
    Layout = "~/Areas/Principle/Views/Shared/_Layout.cshtml";
}



<div class="content-wrapper" style="margin-top:50px;">
    <div class="card card-info">
        <div class="card-header ">
            <h3 class="card-title ">Add Teacher</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        @using (Html.BeginForm("addteacher", "Teacher", FormMethod.Post, new { @id = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>

            <form class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Name</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input-sm", @type = "text", placeholder = @Html.DisplayName("Enter Teacher Name") } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })


                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Image</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.TextBoxFor(model => model.UserImageFIle, new { @class = "form-control input-sm", @accept = "image/png,image/jpg,image/jpeg", type = "file" })
                            @Html.ValidationMessageFor(model => model.UserImageFIle, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputEmail3" class="col-md-3 col-lg-2 col-form-label">Email</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = @Html.DisplayName("Enter Teacher Email") } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputEmail3" class="col-md-3 col-lg-2 col-form-label">Password</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control input-sm", @type = "password", placeholder = @Html.DisplayName("Enter Teacher Password") } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>

                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Address</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.TextAreaFor(model => model.Address, 5, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;", placeholder = @Html.DisplayName("Enter Teacher Address") })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })


                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Contact Number</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control input-sm", placeholder = @Html.DisplayName("Enter Teacher Contact Number") } })
                            @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })


                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-1"></div>
                        <label for="inputPassword3" class="col-md-3 col-lg-2 col-form-label">Class</label>
                        <div class="col-md-7 col-lg-8">
                            @Html.DropDownListFor(m => m.Class_Id, (SelectList)ViewBag.school, "--Select Class--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => Model.Class_Id, "", new { @class = "text-danger" })
                        </div>


                    </div>


                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-6">
                            <button type="submit" class="btn btn-info float-right">ADD</button>
                        </div>
                        <div class="col-md-6 col-sm-6 col-6">
                            <button type="submit" class="btn btn-default float-left ">Cancel</button>
                        </div>
                    </div>

                </div>
                <!-- /.card-footer -->
            </form>
        }
    </div>


</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">

         window.onload = function () {
          alert("@ViewBag.Message");
          };
    </script>

}
