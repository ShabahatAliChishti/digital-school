        $.ajax({

            type: 'POST',

            url: '@Url.Action("DeleteStudent","Student", new { Area = "Principle" })',
            data: { StudentId: empId },
            success: function (resul) {
                $("#myModal").modal('hide');
                $("#row_" + empId).remove();


            }
        })
    }

    </script>



</body>


</html>*
