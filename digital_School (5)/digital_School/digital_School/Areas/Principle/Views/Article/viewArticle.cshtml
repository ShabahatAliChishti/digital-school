@model IEnumerable<digital_School.Models.Article>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">



    @{
        ViewBag.Title = "viewArticle";
        Layout = "~/Areas/Principle/Views/Shared/_Layout.cshtml";
